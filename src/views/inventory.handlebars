<div class="container mx-auto mt-20 w-2/3">
    <div class="mt-20">
        <h3 class="text-center text-3xl m-5">Inventario</h3>

        <form class="grid grid-cols-1 sm:grid-cols-1 lg:grid-cols-3 " id="formulario">
            <div class="col-span-1">
                <label for="" class="block mb-2 text-sm font-medium text-gray-900">Nombre producto</label>
                <input type="text" class=" sm:w-full sm:w-3/4 mb:w3/4 lg:w-11/12  rounded-lg " name="nombre" id="nombre"
                    placeholder="Ingrese nombre producto" maxlength="100" required>
            </div>
            <div class="col-span-1">
                <label for="" class="block mb-2 text-sm font-medium text-gray-900">Precio</label>
                <input type="text" class=" sm:w-full sm:w-3/4 mb:w3/4 lg:w-11/12  rounded-lg " min="0" name="precio" id="precio"
                    placeholder="Ingrese precio producto" required>
            </div>
            <div class="col-span-1">
                <label for="" class="block mb-2 text-sm font-medium text-gray-900">Stock</label>
                <input type="number" class=" sm:w-full sm:w-3/4 mb:w3/4 lg:w-11/12  rounded-lg " min="0" name="stock" id="stock"
                    placeholder="Ingrese stock producto" required>
            </div>
            <div class="col-span-1">
                <label for="" class="block mb-2 text-sm font-medium text-gray-900">Imagen URL</label>
                <input type="url" class=" sm:w-full sm:w-3/4 mb:w3/4 lg:w-11/12  rounded-lg " name="imagen" id="imagen"
                    placeholder="Ingrese imagen producto" maxlength="200" required>
            </div>
            <div class="col-span-1">
                <label for="" class="block mb-2 text-sm font-medium text-gray-900">Categoría</label>
                <select id="Categoria" name="categoria"
                    class=" sm:w-full sm:w-3/4 mb:w3/4 lg:w-11/12 rounded-lg">
                    {{#each categoria}}
                    <option value="{{this.dataValues.id}}">{{this.dataValues.nombre_categoria}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="col-span-full">
                <label for="" class="block mb-2 text-sm font-medium text-gray-900">Descripción</label>
                <textarea class="w-full rounded-lg" name="descripcion" id="descripcion" cols="10" rows="5"
                    class="w-full" placeholder="Ingrese descripcion producto" minlength="2" maxlength="200" required></textarea>
            </div>
            <div class="grid justify-center col-span-full mt-5">
                <button type="submit"
                    class="text-white bg-emerald-400 hover:bg-emerald-500 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-3 md:mr-0">Agregar
                    Producto</button>
            </div>
        </form>
    </div>
    <div class="mt-20">
        <h3 class="text-center text-3xl m-5">Productos</h3>
        <div>
            {{>inventarioProducts}}
        </div>

    </div>
</div>
<script src="/js/cr-product.js"></script>